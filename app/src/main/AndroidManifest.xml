<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.updn.blingbling">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CategoryActivity"
            android:label="Portfolio"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.ItemsActivity"
            android:label="Items"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.DetailsActivity"
            android:label="Details"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CustomizeActivity"
            android:label="Customize"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.BasketActivity"
            android:label="Basket"
            android:screenOrientation="portrait" />
    </application>

</manifest>