<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/back"/>

        <ImageButton
            android:id="@+id/basket"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/basket"/>

        <Button
            android:id="@+id/toolbar_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/back"
            android:layout_toRightOf="@id/back"
            android:layout_toStartOf="@id/basket"
            android:layout_toLeftOf="@id/basket"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="@string/customize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp">
                    <TextView
                        android:id="@+id/gold_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/gold_price"/>

                    <EditText
                        android:id="@+id/gold_price"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:textColorHint="#000000"
                        android:hint="Rs. 0"
                        android:inputType="numberDecimal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/gold_price"
                        android:background="#DCDCDC"/>

                    <TextView
                        android:id="@+id/making_charges_text"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_below="@id/gold_price_text"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="@string/making_charges"/>

                    <EditText
                        android:id="@+id/making_charges"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/gold_price"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:textColorHint="#000000"
                        android:hint="Rs. 0"
                        android:inputType="numberDecimal"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/making_charges"
                        android:background="#DCDCDC"/>

                    <TextView
                        android:id="@+id/vat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_below="@id/making_charges_text"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="@string/vat"/>

                    <EditText
                        android:id="@+id/vat"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/making_charges"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:textColorHint="#000000"
                        android:hint="0%"
                        android:inputType="numberDecimal"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/gold_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/gold"/>

                    <EditText
                        android:id="@+id/gold_charges"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/gold_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:inputType="numberDecimal"
                        android:textColorHint="@android:color/black"
                        android:hint="Rs. 0"/>

                    <TextView
                        android:id="@+id/gold_charges_text"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignTop="@id/gold_charges"
                        android:layout_alignBottom="@id/gold_charges"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="@string/charges"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/gold_charges"
                        android:background="#DCDCDC"/>

                    <Spinner
                        android:id="@+id/gold_color"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/gold_charges"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/color_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/gold_color"
                        android:layout_alignBottom="@id/gold_color"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/color"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/gold_color"
                        android:background="#DCDCDC"/>

                    <EditText
                        android:id="@+id/gold_purity"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/gold_color"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:inputType="numberDecimal"
                        android:textColorHint="@android:color/black"
                        android:hint="0"/>

                    <TextView
                        android:id="@+id/gold_purity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignTop="@id/gold_purity"
                        android:layout_alignBottom="@id/gold_purity"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/purity"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/diamond_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/diamond"/>

                    <Spinner
                        android:id="@+id/diamond_shape"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/diamond_title"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/diamond_shape_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/diamond_shape"
                        android:layout_alignBottom="@id/diamond_shape"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/shape"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/diamond_shape"
                        android:background="#DCDCDC"/>

                    <EditText
                        android:id="@+id/diamond_carat_weight"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/diamond_shape"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:gravity="end|center_vertical"
                        android:inputType="numberDecimal"
                        android:textColorHint="@android:color/black"
                        android:hint="0"/>

                    <TextView
                        android:id="@+id/diamond_carat_weight_text"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_alignTop="@id/diamond_carat_weight"
                        android:layout_alignBottom="@id/diamond_carat_weight"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/carat_weight"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/diamond_carat_weight"
                        android:background="#DCDCDC"/>

                    <Spinner
                        android:id="@+id/diamond_color"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/diamond_carat_weight"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/diamond_color"
                        android:background="#DCDCDC"/>

                    <TextView
                        android:id="@+id/diamond_color_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/diamond_color"
                        android:layout_alignBottom="@id/diamond_color"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/color"/>

                    <Spinner
                        android:id="@+id/diamond_clarity"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@id/diamond_color"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/diamond_clarity_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/diamond_clarity"
                        android:layout_alignBottom="@id/diamond_clarity"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#888888"
                        android:textSize="15sp"
                        android:text="@string/clarity"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <co.updn.blingbling.customviews.MontserratTextView
                android:id="@+id/add_to_basket"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:background="@drawable/round_button_black"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:text="@string/add_to_basket"
                android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>