<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginBottom="8dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="12dp"
    android:layout_margin="1dp"
    android:background="@android:color/white">
    <co.updn.blingbling.customviews.MontserratTextView
        android:id="@+id/categories_category_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:text="Gold bracelet"/>
    <ImageView
        android:id="@+id/categories_icon"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/categories_category_type"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingEnd="12dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_donut_large_black_24dp"/>
</RelativeLayout>