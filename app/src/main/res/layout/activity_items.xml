<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:padding="16dp"
        android:background="@android:color/white"
        android:src="@drawable/back_small"
        android:scaleType="fitCenter" />

    <Spinner
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@id/back"
        android:layout_toRightOf="@id/back"
        android:layout_toStartOf="@id/basket"
        android:layout_toLeftOf="@id/basket"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="2dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/categories"
        android:layout_alignRight="@id/categories"
        android:layout_alignTop="@id/categories"
        android:layout_alignBottom="@id/categories"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:rotation="-90"
        android:src="@drawable/back_small" />

    <ImageButton
        android:id="@+id/basket"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/basket_blk"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/items_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/categories"
        android:layout_marginTop="1dp"/>

</RelativeLayout>